
{% extends "regapp/base.j2" %}

{% block content %}

<div class="row">
    <div class="col">
        <h1>MGHPCC Shared Services Registration Portal - Profile Management</h1>
        <p class="mt-4">
            You may update your MGHPCC-SS user profile here
        </p>
    </div>
</div>
<div class="row mt-4">
    <div class="col">

        <h4>Account Profile information</h4>

        {% if not form.accept_privacy_statement.value() %}
        <p>
            Please read the <a href="#"  data-toggle="modal" data-target="#termsModal"> {{terms.title}} {{terms.version}}</a> and accept
            the terms by checking the box in the form below.
        </p>
        {% endif %}

        <form id="{{form.helper.form_id}}" action="{{request.path_info}}" method="GET">
            {{ csrf_input }}
            {{ crispy(form) }}
            <div class="float-right">
                <input id="updateaccount" name="updateaccount" type="submit" class="btn btn-primary" value="Update MGHPCC-SS Account" />
            </div>
        </form>
    </div>
</div>

<div id="termsModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog terms_modal" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">NERC Terms and Conditions</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{terms.content|safe}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


{% endblock %}
